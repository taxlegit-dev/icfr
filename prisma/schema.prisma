datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model User {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  phone     String   @unique
  createdAt DateTime @default(now())
}

model OTP {
  id        String   @id @default(cuid())
  phone     String   @unique
  otp       String
  expiresAt DateTime
  createdAt DateTime @default(now())
}
